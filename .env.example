# Alchemy — Environment Configuration
# Copy this to .env and adjust as needed

# ── Server ────────────────────────────────────────────────────────────────────
MAX_WORKERS=2
LOG_LEVEL=INFO

# ── Feature Flags ─────────────────────────────────────────────────────────────
LOAD_DOCUMENTS=true
LOAD_MEDIA=true
LOAD_WEB=true

# ── Document Parser ───────────────────────────────────────────────────────────
DOCLING_DEVICE=auto              # auto | cpu | cuda | mps
DOCLING_TABLE_MODE=accurate      # fast | accurate
DOCLING_OCR_ENABLED=true

# ── Image Parser ──────────────────────────────────────────────────────────────
VISION_MODEL=Qwen/Qwen2-VL-7B-Instruct-AWQ
VISION_MAX_NEW_TOKENS=1024

# ── Audio Parser ──────────────────────────────────────────────────────────────
WHISPER_MODEL=distil-whisper/distil-large-v3
WHISPER_COMPUTE_TYPE=float16     # float16 (GPU) | int8 (CPU)
WHISPER_BATCH_SIZE=16

# ── Diarization (Optional) ────────────────────────────────────────────────────
# Requires HuggingFace token with accepted pyannote terms of use
# DIARIZATION_ENABLED=true
# HUGGINGFACE_TOKEN=hf_your_token_here

# ── Web Crawler ───────────────────────────────────────────────────────────────
CRAWLER_MAX_CONCURRENT=5
CRAWLER_TIMEOUT=30

# ── Chunking ──────────────────────────────────────────────────────────────────
CHUNK_SIZE=512
CHUNK_OVERLAP=64
SEMANTIC_CHUNKING=true
